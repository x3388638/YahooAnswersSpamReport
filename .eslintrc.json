{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": "airbnb",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {},
  "overrides": {
    "files": ["*.js"],
    "rules": {
      "no-underscore-dangle": "off",
      "no-plusplus": "off",
      "no-use-before-define": "off",
      "no-alert": "off",
      "operator-linebreak": "off",
      "arrow-parens": "off",
      "no-param-reassign": "off"
    }
  }
}
